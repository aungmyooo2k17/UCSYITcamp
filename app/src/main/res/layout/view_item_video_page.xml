<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pdf_item_backgorund"
    android:padding="@dimen/margin_medium_2"
    android:layout_marginTop="@dimen/margin_medium_2"
    android:layout_marginLeft="@dimen/margin_medium_2"
    android:layout_marginRight="@dimen/margin_medium_2">


    <ImageView
        android:id="@+id/iv_video_cover"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@drawable/ucsybg"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/iv_speaker_profile"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/ucsybg"
        android:scaleType="centerCrop"
        android:layout_below="@id/iv_video_cover"
        android:layout_marginTop="@dimen/margin_medium_2"/>

    <TextView
        android:id="@+id/tv_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:layout_below="@id/iv_video_cover"
        android:layout_toRightOf="@id/iv_speaker_profile"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:text="Ubuntu Cloud"
        android:textSize="@dimen/text_regular_2x"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_speaker_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ko Ko Ye"
        android:layout_below="@id/tv_topic"
        android:layout_toRightOf="@id/iv_speaker_profile"
        android:layout_marginLeft="@dimen/margin_medium_2"/>



</RelativeLayout>